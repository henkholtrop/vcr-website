<section class="content-wrapper">
    <div class="article-wrapper">
      <%= form_for Game.new do |f| %>

      <% if @game.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@game.errors.count, "error") %> prohibited
            this game from being saved:
          </h2>
          <ul>
            <% @game.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

        <p>
          <%= f.label :home_team %><br>
          <%= f.collection_select(:home_team, Team.all, :id, :title) %>
        </p>

        <p>
          <%= f.label :away_team %><br>
          <%= f.collection_select(:away_team, Team.all, :id, :title) %>
        </p>

        <p>
          <%= f.label :date %><br>
          <%= f.datetime_select :date %>
        </p>

        <p>
          <%= f.submit %>
        </p>
      <% end %>
    </div>
  <br class="clear" />
</section>